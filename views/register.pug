//- views/register.pug
doctype html
html(lang="es")
  head
    title Registro
    meta(charset="UTF-8")
    meta(name="viewport" content="width=device-width, initial-scale=1, shrink-to-fit=no")
    link(rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/css/bootstrap.min.css")
  body
    //- Contenedor principal centrado
    div.container.d-flex.align-items-center.justify-content-center.min-vh-100
      div.card.shadow-lg.p-4.border-0.rounded-3
        h1.text-center.mb-4.text-primary Registro de usuarios
        p.text-danger.text-center Campos obligatorios *

          if messages && messages.success
            div.alert.alert-success= messages.success
          if messages && messages.error
            div.alert.alert-danger= messages.error

        form(action="/auth/register", method="post")
          //- Nombre de Usuario
          div.mb-3
            label(for="username", class="form-label fw-bold") Nombre de Usuario *
            input(type="text", name="username", id="username", class="form-control", placeholder="Ingresa nombre de usuario", required)
          //- Email
          div.mb-3
            label(for="email", class="form-label fw-bold") E-mail *
            input(type="email", name="email", id="email", class="form-control", placeholder="Ingresa correo electrónico", required)
          //- Contraseña
          div.mb-3
            label(for="password", class="form-label fw-bold") Contraseña *
            input(type="password", name="password", id="password", class="form-control", placeholder="Crea una contraseña", required)
          //- Rol
          div.mb-4
            label(for="rol", class="form-label fw-bold") Rol *
            select(name="rol", id="rol", class="form-select", required)
              option(value="paciente") Paciente
              option(value="admisión") Secretaria/o
              option(value="admin") Administrador
              option(value="medico") Médico
          //- Botón de envío
          div.text-center
            button(type="submit", class="btn btn-primary btn-lg w-100 mt-3") Registrarse
          br
          a(href="/dashboard") Menu principal
    //- Bootstrap JavaScript Bundle con Popper
    script(src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/js/bootstrap.bundle.min.js")
