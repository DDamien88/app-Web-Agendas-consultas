doctype html
html(lang="es")
    head
        meta(charset="UTF-8")
        meta(name="viewport" content="width=device-width, initial-scale=1, shrink-to-fit=no")
        title Turnos Confirmados
        link(rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0-alpha1/dist/css/bootstrap.min.css")
        link(rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.0.0-beta3/css/all.min.css")
    body
        div.container.mt-4.ml-4
            a(href="/dashboard") Menú principal

        .container.mt-5
            .card.shadow-sm
                .card-header.bg-primary.text-white.text-center
                    h1.mb-0 Turnos
                .card-body
                    if turnos.length > 0
                        table.table.table-bordered.table-hover
                            thead.bg-light
                                tr
                                    th Fecha
                                    th Hora
                                    th Paciente
                                    th Estado
                                    th Sobre Turno
                                    th Sucursal
                                    th Clasificación
                            tbody
                                each turno in turnos
                                    tr
                                        td= turno.fecha
                                        td= turno.hora
                                        td= turno.paciente || 'No disponible'
                                        td= turno.estado
                                        td= turno.esSobreTurno == 1 ? 'si' : 'no'
                                        td= turno.sucursal
                                        td= turno.clasificacion
                    else
                        p No hay turnos confirmados.
                        
        script(src="https://code.jquery.com/jquery-3.6.0.min.js")
        script(src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/js/bootstrap.bundle.min.js")
