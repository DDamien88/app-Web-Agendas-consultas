// RegistroPacIndex.pug
doctype html
html(lang="es")
    head
        meta(charset="UTF-8")
        meta(name="viewport" content="width=device-width, initial-scale=1.0")
        title Registro de Paciente
        link(href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/css/bootstrap.min.css" rel="stylesheet")
        style.
            body {
                background-color: #f8f9fa;
            }
            .container {
                margin-top: 50px;
            }
            .form-container {
                background-color: white;
                padding: 30px;
                border-radius: 8px;
                box-shadow: 0 4px 8px rgba(0, 0, 0, 0.1);
            }
            h2 {
                color: #343a40;
            }
            .btn-primary {
                background-color: #007bff;
                border-color: #007bff;
            }

    body
        .container.mb-4
            .row.justify-content-center
                .col-md-8
                    .form-container
                        h2.text-center.mb-4 Registro de Paciente
                        p.text-danger Campos obligatorios *


                        if messages && messages.success && messages.success.length
                            div.alert.alert-success
                                each message in messages.success
                                    p= message.msg

                        if messages && messages.error && messages.error.length
                            div.alert.alert-danger
                                each message in messages.error
                                    p= message.msg


                        form(action="/auth/registerComoPac" method="POST" enctype="multipart/form-data")
                            .mb-3
                                label(for="nombreCompleto" class="form-label") Nombre Completo *
                                input(type="text" id="nombreCompleto" name="nombreCompleto" class="form-control" required)

                            .mb-3
                                label(for="email" class="form-label") Correo Electrónico *
                                input(type="email" id="email" name="email" class="form-control" required)

                            .mb-3
                                label(for="username" class="form-label") Nombre de Usuario *
                                input(type="text" id="username" name="username" class="form-control" required)

                            .mb-3
                                label(for="password" class="form-label") Contraseña *
                                input(type="password" id="password" name="password" class="form-control" required)

                            .mb-3
                                label(for="dni" class="form-label") DNI *
                                input(type="text" id="dni" name="dni" class="form-control" required)

                            .mb-3
                                label(for="motivoConsulta" class="form-label") Motivo de Consulta (Opcional)
                                input(type="text" id="motivoConsulta" name="motivoConsulta" class="form-control")

                            .mb-3
                                label(for="obraSocial" class="form-label") Obra Social *
                                input(type="text" id="obraSocial" name="obraSocial" class="form-control" required)

                            .mb-3
                                label(for="datosContacto" class="form-label") Datos de Contacto *
                                input(type="text" id="datosContacto" name="datosContacto" class="form-control" required)

                            .mb-3
                                label(for="documentoFotocopia" class="form-label") Fotocopia de Documento *
                                input(type="file" id="documentoFotocopia" name="documentoFotocopia" class="form-control")


                            .d-grid.gap-2.mt-4
                                button(type="submit" class="btn btn-primary btn-lg") Registrar Paciente
                        

        script(src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/js/bootstrap.bundle.min.js")
