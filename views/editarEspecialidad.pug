doctype html
html(lang="es")
    head
        title Editar Especialidad
        link(rel="stylesheet", href="https://stackpath.bootstrapcdn.com/bootstrap/4.5.2/css/bootstrap.min.css")
    body
        .container.mt-5
            h1.text-center Editar Especialidad

            if error
                .alert.alert-danger(role="alert") #{error}
            if success
                .alert.alert-success(role="alert") #{success}

            form(action=`/agendas/especialidades/editar/${especialidad.idEspecialidad}` method="post")
                .form-group
                    label(for="nombreEspecialidad") Nombre de la Especialidad
                    input#nombreEspecialidad.form-control(
                        type="text" 
                        name="nombreEspecialidad" 
                        value=especialidad.nombreEspecialidad 
                        required
                    )
                button.btn.btn-primary(type="submit") Guardar Cambios
