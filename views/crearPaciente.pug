doctype html
html
  head
    title Crear Paciente
  body
    h1 Crear Paciente
      if error
            p.error-message #{error}
    form(action='/pacientes/crear', method='POST')
      label(for='nombreCompleto') Nombre Completo:
      input(type='text', name='nombreCompleto', required)
      
      label(for='dni') DNI:
      input(type='text', name='dni', required)

      label(for='motivoConsulta') Motivo de Consulta:
      input(type='text', name='motivoConsulta')

      label(for='obraSocial') Obra Social:
      input(type='text', name='obraSocial')

      label(for='datosContacto') Datos de Contacto:
      input(type='text', name='datosContacto')

      button(type='submit') Crear Paciente
