doctype html
html(lang="es")
    head
        meta(charset="UTF-8")
        meta(name="viewport", content="width=device-width, initial-scale=1.0")
        link(rel="stylesheet", href="/styles.css")
        link(rel="stylesheet", href="https://stackpath.bootstrapcdn.com/bootstrap/4.5.2/css/bootstrap.min.css")
        title Registrar paciente
    body 
        .container.mt-5.mb-3 
            h1 Registro de Paciente
            
            if error
                .alert.alert-danger
                    | #{error}

            form(action="/pacientes/registro", method="POST", enctype="multipart/form-data")
                .form-group
                    label(for="nombreCompleto") Nombre Completo
                    input.form-control(type="text", name="nombreCompleto", required, placeholder="Ingrese su nombre completo")

                .form-group
                    label(for="dni") DNI
                    input.form-control(type="text", name="dni", required, placeholder="Ingrese su DNI")

                .form-group
                    label(for="motivoConsulta") Motivo de Consulta
                    input.form-control(type="text", name="motivoConsulta", placeholder="Ingrese el motivo de consulta")

                .form-group
                    label(for="obraSocial") Obra Social
                    input.form-control(type="text", name="obraSocial", placeholder="Ingrese su obra social")

                .form-group
                    label(for="datosContacto") Datos de Contacto
                    input.form-control(type="text", name="datosContacto", placeholder="Ingrese sus datos de contacto")

                .form-group
                    label(for="documentoFotocopia") Fotocopia del Documento
                    input.form-control(type="file", name="documentoFotocopia", required)

                button.btn.btn-primary(type="submit") Registrar Paciente
                                    
            script(src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/js/bootstrap.bundle.min.js")
            link(rel="stylesheet", href="https://cdnjs.cloudflare.com/ajax/libs/bootstrap-icons/1.10.5/font/bootstrap-icons.min.css")

        script(src="https://code.jquery.com/jquery-3.5.1.slim.min.js")
        script(src="https://cdn.jsdelivr.net/npm/@popperjs/core@2.9.2/dist/umd/popper.min.js")
        script(src="https://stackpath.bootstrapcdn.com/bootstrap/4.5.2/js/bootstrap.min.js")
