doctype html
html(lang="es")
    head
        meta(charset="UTF-8")
        meta(name="viewport" content="width=device-width, initial-scale=1, shrink-to-fit=no")
        title Detalles del Paciente
        link(rel="stylesheet" href="https://stackpath.bootstrapcdn.com/bootstrap/5.3.0/css/bootstrap.min.css")
        style.
            body {
                background-color: #1c1f2b;
                color: #d1d5db;
                font-family: Arial, sans-serif;
            }
            .card {
                background-color: #2d3240;
                border: none;
                border-radius: 10px;
                box-shadow: 0 4px 8px rgba(0, 0, 0, 0.3);
            }
            .card-header {
                background-color: #3a3f52;
                color: #f0f1f5;
                border-bottom: none;
                font-size: 1.3rem;
                font-weight: bold;
            }
            .list-group-item {
                background-color: transparent;
                border: none;
                color: #c1c5d0;
            }
            .list-group-item a {
                color: #fff;
            }
            .btn-custom {
                background-color: #6c63ff;
                border: none;
                color: white;
            }
            .btn-custom:hover {
                background-color: #574bff;
            }
    body
        .container.py-5
            .row.justify-content-center
                .col-lg-6
                    .card
                        .card-header.text-center
                            | Detalles del Paciente
                        .card-body.p-4
                            if paciente
                                ul.list-group.list-group-flush
                                    li.list-group-item
                                        strong Nombre Completo:
                                        span.text-light.float-end #{paciente.nombreCompleto}
                                    li.list-group-item
                                        strong DNI:
                                        span.text-light.float-end #{paciente.dni}
                                    li.list-group-item
                                        strong Motivo de Consulta:
                                        span.text-light.float-end #{paciente.motivoConsulta || 'No especificado'}
                                    li.list-group-item
                                        strong Obra Social:
                                        span.text-light.float-end #{paciente.obraSocial}
                                    li.list-group-item
                                        strong Datos de Contacto:
                                        span.text-light.float-end #{paciente.datosContacto}
                                    li.list-group-item
                                        strong Usuario:
                                        span.text-light.float-end #{paciente.usuario}
                                    if paciente.documentoFotocopia
                                        li.list-group-item
                                            strong Documento de Fotocopia:
                                            a.text-decoration-none.text-info.float-end(href=`/${paciente.documentoFotocopia}`) Ver documento
                                                br
                                                a.btn.btn-outline-white(href="/dashboard") Men√∫ Principal
                            else
                                .alert.alert-warning.text-center.mt-3
                                    | No se encontraron detalles del paciente.

        script(src="https://code.jquery.com/jquery-3.6.0.min.js")
        script(src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/js/bootstrap.bundle.min.js")
